@model MoralCompass.Web.Controllers.DiscussionItemController.DiscussionItemDetailModel
@{
    ViewData["Title"] = Model.Item?.Title ?? "–î–∏–ª–µ–º–º–∞";
}

<div class="container mt-3">
    <!-- üîπ –•–ª–µ–±–Ω—ã–µ –∫—Ä–æ—à–∫–∏ -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb small">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Index")">–ì–ª–∞–≤–Ω–∞—è</a>
            </li>
            @if (Model.Topic?.CoreThesis != null)
            {
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Details", "Thesis", new { id = Model.Topic.CoreThesis.Id })">
                        @Model.Topic.CoreThesis.Title
                    </a>
                </li>
            }
            @if (Model.Topic != null)
            {
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Details", "Topic", new { id = Model.Topic.Id })">
                        @Model.Topic.Title
                    </a>
                </li>
            }
            <li class="breadcrumb-item active" aria-current="page">
                @Model.Item?.Title
            </li>
        </ol>
    </nav>

    <!-- üîπ –î–∏–ª–µ–º–º–∞ -->
    <div class="card mb-4">
        <div class="card-body">
            <h4>@Model.Item?.Title</h4>
            <p class="text-muted small">
                @Model.Author.Nickname ¬∑ 
                @Model.Item?.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                @if (Model.Topic != null)
                {
                    <text> ¬∑ –≤ —Ç–µ–º–µ <strong>@Model.Topic.Title</strong></text>
                }
            </p>
            <div class="mt-2">@Model.Item?.Content</div>
        </div>
    </div>

    <!-- üîπ –§–æ—Ä–º–∞ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏—è (—Ç–æ–ª—å–∫–æ –¥–ª—è –∞–≤—Ç–æ—Ä–∏–∑–æ–≤–∞–Ω–Ω—ã—Ö) -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="card mb-4">
            <div class="card-body">
                <h5>–í–∞—à–µ –º–Ω–µ–Ω–∏–µ</h5>
                <form method="post" asp-action="AddComment" asp-route-id="@Model.Item?.Id">
                    <div class="mb-3">
                        <textarea name="content" class="form-control" rows="3" 
                                  placeholder="–ù–∞–ø–∏—à–∏—Ç–µ –∞—Ä–≥—É–º–µ–Ω—Ç, –º—ã—Å–ª—å, –∫–æ–Ω—Ç—Ä–≤–æ–ø—Ä–æ—Å..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">–û–ø—É–±–ª–∏–∫–æ–≤–∞—Ç—å</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info small">
            –ß—Ç–æ–±—ã —É—á–∞—Å—Ç–≤–æ–≤–∞—Ç—å –≤ –æ–±—Å—É–∂–¥–µ–Ω–∏–∏, <a href="@Url.Action("Login", "Auth")">–≤–æ–π–¥–∏—Ç–µ</a> –∏–ª–∏ <a href="@Url.Action("Register", "Auth")">–∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä—É–π—Ç–µ—Å—å</a>.
        </div>
    }

    <hr />

    <!-- üîπ –°–ø–∏—Å–æ–∫ –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–µ–≤ -->
    <h5>@Model.Comments.Count –∫–æ–º–º–µ–Ω—Ç–∞—Ä–∏–µ–≤</h5>

    @if (!Model.Comments.Any())
    {
        <p class="text-muted fst-italic">–ü–æ–∫–∞ –Ω–∏–∫—Ç–æ –Ω–µ –ø—Ä–æ–∫–æ–º–º–µ–Ω—Ç–∏—Ä–æ–≤–∞–ª. –°—Ç–∞–Ω—å—Ç–µ –ø–µ—Ä–≤—ã–º.</p>
    }
    else
    {
        @foreach (var c in Model.Comments)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <strong>@c.AuthorNickname</strong>
                        <small class="text-muted">@c.Comment.CreatedAt.ToString("dd.MM HH:mm")</small>
                    </div>
                    <div class="mt-2">@c.Comment.Content</div>

                    <!-- üîπ –†–µ–∞–∫—Ü–∏–∏ -->
                    <div class="mt-2 d-flex gap-2">
                        <form method="post" asp-action="ToggleCommentReaction" asp-route-commentId="@c.Comment.Id" asp-route-value="1" class="d-inline">
                            <button type="submit" class="btn btn-sm @(c.UserReaction == 1 ? "btn-primary" : "btn-outline-primary")">
                                üëç @c.Likes
                            </button>
                        </form>

                        <form method="post" asp-action="ToggleCommentReaction" asp-route-commentId="@c.Comment.Id" asp-route-value="-1" class="d-inline">
                            <button type="submit" class="btn btn-sm @(c.UserReaction == -1 ? "btn-secondary" : "btn-outline-secondary")">
                                üëé @c.Dislikes
                            </button>
                        </form>

                        @if (c.UserReaction != 0)
                        {
                            <form method="post" asp-action="ToggleCommentReaction" asp-route-commentId="@c.Comment.Id" asp-route-value="0" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-dark">√ó</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

<style>
    body { background-color: #fafafa; color: #222; }
    .card { border: 1px solid #e0e0e0; }
    .btn-outline-primary:hover { background-color: #e3f2fd; }
    .btn-outline-secondary:hover { background-color: #f5f5f5; }
    .text-muted { color: #777 !important; }
</style>