@{
    var thesis = ViewBag.Thesis as MoralCompass.Infrastructure.Domain.CoreThesis;
    ViewData["Title"] = "Новая тема";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            <h5>Добавить тему к заповеди: <strong>@thesis?.Title</strong></h5>
        </div>
        <div class="card-body">
            <form asp-action="CreateTopic" asp-controller="Thesis" method="post">
                <input type="hidden" name="thesisId" value="@thesis?.Id" />

                <div class="mb-3">
                    <label class="form-label">Название темы</label>
                    <input type="text" name="title" class="form-control" 
                           placeholder="Например: «Можно ли врать во благо?»" 
                           required />
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Создать тему</button>
                    <a href="@Url.Action("Details", "Thesis", new { id = thesis?.Id })"
                       class="btn btn-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>